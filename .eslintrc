{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": { 
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "extends": ["eslint:recommended", "plugin:react/all"],
  "settings": {
    "react": {
      "createClass": "createClass",
      "pragma": "React",
      "version": "16.0"
    }
  },
  "rules": {
    "no-console": 0,
    "new-cap": 0,
    "no-underscore-dangle": 0,
    "no-use-before-define": 0,
    "no-unused-vars": 0,
    "no-undef": 0,
    "eol-last": 2,
    "quotes": [2, "single"],
    "jsx-quotes": 1,
    "react/jsx-indent": [2, 2],
    "react/jsx-indent-props": [2, "first"],
    "react/jsx-closing-bracket-location": [0, "after-props"],
    "react/jsx-boolean-value": [0, "always"],
    "react/jsx-one-expression-per-line": [2, {"allow": "single-child"}],
    "react/jsx-curly-spacing": [2, {"when": "never"}],
    "react/no-unused-prop-types": 1,
    "react/forbid-component-props": 0,
    "react/prop-types": 1,
    "react/jsx-filename-extension": 0,
    "react/no-multi-comp": [1, { "ignoreStateless": true }],
    "react/jsx-no-bind": [1, {
      "ignoreDOMComponents": true,
      "ignoreRefs": true,
      "allowArrowFunctions": true,
      "allowFunctions": false,
      "allowBind": false
    }],
    "react/jsx-no-literals": 0,
    "react/no-array-index-key": 0,
    "react/require-default-props": [1, { "forbidDefaultForRequired": true }],
    "react/jsx-max-props-per-line": [1, { "when": "multiline" }],
    "react/forbid-prop-types": [1, { "forbid": ["array"]}],
    "semicolon": ["warning", "never"],
    "comma-dangle": ["error", "never", {
      "max": 1,
      "maxEOF": 1,
      "maxBOF": 1
    }],
    "no-trailing-spaces": ["error", {
      "skipBlankLines": false,
      "ignoreComments": false
    }],
    "sort-keys": ["error", "asc", {
      "caseSensitive": true,
      "natural": false
    }],
    "arrow-parens": ["error", "as-needed"],
    "max-line-length": false,
    "max-lines-per-function": [1, 300],
    "sort-imports": 0,
    "max-classes-per-file": 1
  }
}
